<%- include('../views/element/head.ejs') %> <!-- Head -->
<body>
	 <%- include('../views/element/header.ejs')%> <!-- Header -->
	<div class="container">
		<h1><%= message %></h1>
		<form action="/create" method="POST">
			<div class="input-group mb-3">
				<input type="text" name="id" class="form-control" placeholder="Id-weapon" aria-label="id-weapon" aria-describedby="basic-addon1">
			 </div>

			<div class="input-group mb-3">
				<input type="text" name="name" class="form-control" placeholder="Name-weapon" aria-label="name-weapon" aria-describedby="basic-addon1">
			 </div>
			 
			 <div class="input-group mb-3">
				<input type="text" name="number" class="form-control" placeholder="Number-of-weapon" aria-label="number-of-weapon" aria-describedby="basic-addon2">
				<span class="input-group-text" id="basic-addon2">count</span>
			 </div>
			 
			 <div class="input-group mb-3">
				<input type="text" name="platoon" class="form-control" placeholder="Number-of-platoon" aria-label="Number-of-platoon">
				<span class="input-group-text">@</span>
				<input type="text" name="readiness" class="form-control" placeholder="Readiness-of-weapon" aria-label="Readiness-of-weapon ">
			 </div>
			 <button class="btn btn-primary" type="submit">CREATE</button>
			</div>
		</form>
	</div>	
	<%- include('../views/element/footer')%> <!-- Footer -->
</body>
</html>